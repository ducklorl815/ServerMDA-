<!-- Login Section Begin -->
<section class="login spad">
    <div style="display:flex;">
        <div class="login__form text-center" style="margin:auto;" id="temp">
            <h3>登入/註冊</h3>
            <form method="post">
                <div class="input__item">
                    <input type="text" name="txtAccount" placeholder="手機號碼10碼" id="txt">

                    <span class="icon_mobile"></span>
                </div>
                <div class="input__item">
                    <input type="password" name="txtPassword" id="paswd" style="color:black" placeholder="密碼">
                    <span class="icon_lock"></span>
                </div>
                <button type="submit" id="checkPss" class="site-btn">登入/註冊</button>
                <button type="button" class="site-btn" id="demo">demoID_1</button>
                <button type="button" class="site-btn" id="demo77">demoID_2</button>
                @*<a href="#" class="ml-3">管理員登入</a>*@
            </form>
        </div>
    </div>
    <br />
