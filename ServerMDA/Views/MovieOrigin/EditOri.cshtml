@using ServerMDA.ViewModel
@model CCountrysViewModel

@{
    ViewData["Title"] = "修改";
    Layout = null;
}
<link href="~/css/bootstrap-5.2.2/YukabtnEdit.css" rel="stylesheet" />


<div class="row">
    <div class="col-md-4">
        <h4>修改國家編號 : @Model.國家編號countryId</h4>
        <form asp-action="EditOri" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="國家編號countryId" />
            <div class="form-group">
                <label asp-for="國家名稱countryName" class="control-label"></label>
                <input asp-for="國家名稱countryName" class="form-control" />
                <span asp-validation-for="國家名稱countryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="myfile" type="file" onchange="selectimgFile(this.files)" name="photo" />
                <img id="myimg" class="card-img-top img-thumbnail p-3" src="~/images/Country/@Model.國旗countryImage" />
            </div>

            <div class="form-group">
                    <label asp-for="國旗countryImage" class="control-label"></label>
                    <input asp-for="國旗countryImage" class="form-control" />
                    <span asp-validation-for="國旗countryImage" class="text-danger"></span>
                </div>
            <div class="form-group " style="float:right">
                <input type="submit" value="確認修改" class="btn btn-yuka mb-1 mr-3" />
                <button type="button" class="btn btn-secondary mb-1 mr-3" data-bs-dismiss="modal" aria-label="Close">回到清單</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/bootstrap-5.2.2/bootstrap.min.js"></script>

<script>
    function selectimgFile(files) {
        const myfile = document.querySelector("#myfile")
        const myimg = document.querySelector("#myimg")
        let mynewimg = files[0]
        let objURL = URL.createObjectURL(mynewimg)
        myimg.src = objURL
    }
</script>