@model IEnumerable<ServerMDA.Models.演員總表actor>

@{
    ViewData["Title"] = "演員清單";
    //Layout = null;
}
<link href="~/css/forlayout/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
<link href="~/css/sb-admin-2.css" rel="stylesheet">

<h2>演員清單<a asp-action="Create" class="btn btn-warning mb-1  ml-2">新增</a></h2>

<table id="myTable" class="table table-striped table-hover col-8">
    <thead>
        <tr>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.演員照片image)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.中文名字nameCht)
            </th>
            <th class="col-7">
                @Html.DisplayNameFor(model => model.英文名字nameEng)
            </th>
            <th class="col-1">
                指令
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div>
                    <img src="~/images/Actor/@item.演員照片image" width="120" />
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.中文名字nameCht)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.英文名字nameEng)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.演員編號actorsId" class="btn btn-info p-1">修改</a>
                @*<a asp-action="Delete" asp-route-id="@item.演員編號actorsId">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>


