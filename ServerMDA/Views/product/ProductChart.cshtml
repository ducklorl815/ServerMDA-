
@{
    ViewData["Title"] = "ProductChart";
    Layout = "~/Views/Shared/_ChartLayout.cshtml";
}


<h4>Chart 樣本1</h4>

<div class="container">
    <div class="card bg-white text-dark" style="width:20rem;">
       
        <div class="card-body">
            <h4 class="card-title">樣本</h4>
            <p class="card-text">設計樣本</p>
            <form id="form1" runat="server">
                <div style="width: 100%;">
                    <canvas id="myChart"></canvas>
                </div>
                <div id="myToolTip" style="position:absolute">
                    <p></p>
                </div>
            </form>
        </div>
    </div>
</div> 


@section Scripts{
    <script>
        var ctx = document.getElementById("myChart");
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ["一月", "二月", "三月", "四月", "五月", "六月"],
                datasets: [
                    {
                        label: '可樂',
                        borderColor: window.chartColors.red,
                        backgroundColor: window.chartColors.red,
                        data: GetRandomNumbers(6),
                        fill: false
                    },
                    {
                        label: '爆米花',
                        borderColor: window.chartColors.green,
                        backgroundColor: window.chartColors.green,
                        data: GetRandomNumbers(6),
                        fill: false
                    },
                ]
            },


        });
    </script>
}




