@model ServerMDA.Models.電影主演cast

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<link href="~/css/bootstrap-5.2.2/YukabtnEdit.css" rel="stylesheet" />
<h4>電影主演cast</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="主演編號maId" />
            <div class="form-group">
                <label asp-for="電影編號movieId" class="control-label"></label>
                <select asp-for="電影編號movieId" class="form-control" asp-items="ViewBag.電影編號movieId"></select>
                <span asp-validation-for="電影編號movieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="演員編號actorId" class="control-label"></label>
                <select asp-for="演員編號actorId" class="form-control" asp-items="ViewBag.演員編號actorId"></select>
                <span asp-validation-for="演員編號actorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="角色名字characterName" class="control-label"></label>
                <input asp-for="角色名字characterName" class="form-control" />
                <span asp-validation-for="角色名字characterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="角色說明characterIllustrate" class="control-label"></label>
                <input asp-for="角色說明characterIllustrate" class="form-control" />
                <span asp-validation-for="角色說明characterIllustrate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="確認修改" class="btn btn-yuka" />
                <button type="button" class="btn btn-secondary mr-2" data-bs-dismiss="modal" aria-label="Close">回到清單</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/vendor/jquery/jquery.min.js"></script>