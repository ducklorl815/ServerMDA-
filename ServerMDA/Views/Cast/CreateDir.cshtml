@model ServerMDA.ViewModel.CMovieDirectorViewModel

@{
    ViewData["Title"] = "CreateDir";
    Layout = null;
}


<link href="~/css/bootstrap-5.2.2/YukabtnEdit.css" rel="stylesheet" />



<div class="row">
    <div>
        <form asp-action="CreateDir">
            <h4 class="control-label offset-1">@Model.中文標題titleCht</h4>
            <br />
            <div class="col-md-5 offset-md-1">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="電影編號movieId" disabled="disabled" class="control-label"></label>
                    <select asp-for="電影編號movieId" class="form-control" asp-items="ViewBag.電影編號movieId">
                        <option selected>@Model.電影編號movieId</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="導演編號directorId" class="control-label"></label>
                    <select asp-for="導演編號directorId" class="form-control" asp-items="ViewBag.導演編號directorId">
                        <option ></option>
                        @{
                            var g = @Model.導演中文名字nameCht;
                            foreach (var i in Model.titleNameList)
                            {
                                @if (i != g)
                                {
                                    <option>@i</option>

                                }
                            }
                        }
                    </select>
                </div>
                <div class="form-group" style="float:right">
                    <input type="submit" value="新增導演" class="btn btn-success mb-1 mr-1" />
                    <button type="button" class="btn btn-secondary mb-1" data-bs-dismiss="modal" aria-label="Close">回到清單</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/bootstrap-5.2.2/bootstrap.min.js"></script>
