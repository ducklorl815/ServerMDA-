@model ServerMDA.Models.演員總表actor

@{
    ViewData["Title"] = "新增";
}



<h4 class="offset-md-1">新增演員</h4>

<div class="row">
    <div class="col-md-5 offset-md-1">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="中文名字nameCht" class="control-label"></label>
                <input asp-for="中文名字nameCht" class="form-control" />
                <span asp-validation-for="中文名字nameCht" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="英文名字nameEng" class="control-label"></label>
                <input asp-for="英文名字nameEng" class="form-control" />
                <span asp-validation-for="英文名字nameEng" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">演員照片</label><br />
                <input type="file" name="photo" />
            </div>
            <div class="form-group">
                <input type="submit" value="新增" class="btn btn-primary mr-2" />
                <a asp-action="List" class="btn btn-secondary">回到清單</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
