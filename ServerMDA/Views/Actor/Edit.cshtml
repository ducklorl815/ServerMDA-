@model ServerMDA.Models.演員總表actor

@{
    ViewData["Title"] = "修改";
    Layout = null;
}

@section Styles{
    <style>
        .divEmpty {
            margin: 300px;
        }
        .background-cover {
            width :350px;
            height:467px;
            background-position: center center !important;
            background-size: cover !important;
            object-fit: cover !important;
        }
    </style>
}

<link href="~/css/bootstrap-5.2.2/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/bootstrap-5.2.2/YukabtnEdit.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<div class="row">
    <div class="col-5 offset-md-1">
        <h4>修改演員編號 : @Model.演員編號actorsId</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="演員編號actorsId" value="@Model.演員編號actorsId" />
            </div>
            <div class="form-group">
                <label asp-for="中文名字nameCht" class="control-label"></label>
                <input asp-for="中文名字nameCht" class="form-control" />
                <span asp-validation-for="中文名字nameCht" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="英文名字nameEng" class="control-label"></label>
                <input asp-for="英文名字nameEng" class="form-control" />
                <span asp-validation-for="英文名字nameEng" class="text-danger"></span>
            </div>
            @*<div class="pb-xxl-5 mb-xxl-5">

                </div>*@
            <div class="divEmpty">
                <br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
            </div>
            <div class="form-group">
                @*<label class="control-label">演員照片</label>*@
                <input id="filePhoto" type="file" name="photo" style="margin: -460px 0 0 720px; position: fixed; z-index: 999;" />
            </div>
            <div class="form-group ">
                <input type="submit" value="確認修改" class="btn btn-yuka mb-1 mr-3" />
                @*<a asp-action="List" class="btn btn-secondary">回到清單</a>*@
                <button type="button" class="btn btn-secondary mb-1 mr-3" data-bs-dismiss="modal" aria-label="Close">回到清單</button>
            </div>
        </form>
    </div>

    <div class="col-5 offset-1">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="演員照片image" class="control-label"></label>
                <br />
                <img src="~/images/Actor/@Model.演員照片image" class="background-cover" />
                @*<input asp-for="演員照片image" disabled="disabled" class="form-control" />*@
                <span asp-validation-for="演員照片image" class="text-danger"></span>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="~/js/bootstrap-5.2.2/bootstrap.min.js"></script>
<script src="~/js/bootstrap-5.2.2/bootstrap.bundle.js"></script>