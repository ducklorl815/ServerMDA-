<div>
    <table id="myTable" class="table tables display compact hover col-12">
        <thead>
            <tr style="white-space:nowrap">
                <th style="width:65px">
                    評論ID
                </th>
                <th style="width:240px">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().中文標題titleCht)
                </th>
                @*<th class="col-1">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().評論標題commentTitle)
                </th>*@
                @*<th class="col-2">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().評論內容comments)
                </th>*@
                <th class="col-1">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().評分rate)
                </th>
                <th class="col-1">
                    會員ID
                </th>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().會員電話cellphone)
                </th>
                <th class="col-1">
