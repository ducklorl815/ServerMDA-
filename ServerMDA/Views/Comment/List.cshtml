            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr style="white-space:nowrap">
                <td>
                    @Html.DisplayFor(modelItem => item.評論編號commentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.中文標題titleCht)
                </td>
                @*<td class="tables_hidtext">
                    @Html.DisplayFor(modelItem => item.評論標題commentTitle)
                </td>*@
                @*<td class="tables_hidtext">
                    @Html.DisplayFor(modelItem => item.評論內容comments)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.評分rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.會員編號memberId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.會員電話cellphone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.姓氏lName)@Html.DisplayFor(modelItem => item.名字fName)
                </td>
                <td class="tables_hidtext">
                    @Html.DisplayFor(modelItem => item.發佈時間commentTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.屏蔽invisible)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.公開等級public)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.是否開放討論串oxFloor)
                </td>
                <td>
                    <a class="btn btn-yuka" id="btn" onclick="showmodal('@Url.Action("Edit","Comment",new {id=@item.電影編號movieId},Context.Request.Scheme)',null)">修改</a>
                    <a class="btn btn-details " id="btn" onclick="showmodal('@Url.Action("Details","Comment",new {id=@item.電影編號movieId},Context.Request.Scheme)',null)">細節</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

