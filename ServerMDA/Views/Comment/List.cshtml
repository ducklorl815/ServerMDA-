                </th>
                <th class="col-1">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().屏蔽invisible)
                </th>
                <th class="col-1">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().公開等級public)
                </th>
