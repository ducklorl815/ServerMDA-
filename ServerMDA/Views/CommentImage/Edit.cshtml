@using ServerMDA.ViewModel
@model CCommentImageViewModel

@{
    ViewData["Title"] = "修改";
    Layout = null;
}


<link href="~/css/bootstrap-5.2.2/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<link href="~/css/bootstrap-5.2.2/YukabtnEdit.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="評論圖庫編號commentImageId" />
            <div class="form-group">
                <input id="filePhoto" type="file" name="photo" />
                @*<label class="control-label">演員照片</label>*@
                @*<input id="filePhoto" type="file" name="photo" style="margin: -393px 0 0 575px; position: fixed; z-index: 999;" />*@
            </div>
            <div class="form-group">
                <label asp-for="屏蔽invisible" class="control-label"></label>
                <input asp-for="屏蔽invisible" value="@Model.屏蔽invisible" class="form-control" />
                <span asp-validation-for="屏蔽invisible" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="確認修改" class="btn btn-yuka mb-1 mr-3" />
                @*<a asp-action="List" class="btn btn-secondary">回到清單</a>*@
                <button type="button" class="btn btn-secondary mb-1 mr-3" data-bs-dismiss="modal" aria-label="Close">回到清單</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/vendor/datatables/jquery.dataTables.js"></script>