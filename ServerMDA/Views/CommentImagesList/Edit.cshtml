@model ServerMDA.ViewModel.CCommentImagesListViewModel

@{
    ViewData["Title"] = "修改";
    Layout = null;
}

<link href="~/css/bootstrap-5.2.2/YukabtnEdit.css" rel="stylesheet" />

<div class="row">
    <div>

        <form asp-action="Edit">
            <div class="d-flex flex-row">
                <div class="col-6">
                    <h4>修改評論圖片明細 : @Model.評論圖庫編號commentImageId</h4>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="評論圖片編號ccId" />
                    <div class="form-group">
                        <label asp-for="評論圖庫編號commentImageId" class="control-label"></label>
                        <select asp-for="評論圖庫編號commentImageId" class="form-control" asp-items="ViewBag.評論圖庫編號commentImageId">
                            <option selected>@Model.評論圖庫編號commentImageId</option>
                        </select>
                        <span asp-validation-for="評論圖庫編號commentImageId" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <label asp-for="評論編號commentId" class="control-label"></label>
                        <select asp-for="評論編號commentId" name="評論標題commentTitle" class="form-control" asp-items="ViewBag.評論編號commentId">
                            <option selected>@Model.評論標題commentTitle</option>
                            @{
                                var q = Model.評論標題commentTitle;
                                foreach (var p in Model.titleComm)
                                {
                                    if (p != q)
                                    {
                                        <option>@p</option>
                                    }
                                }

                            }
                        </select>
                        <span asp-validation-for="評論編號commentId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="確認修改" class="btn btn-yuka mr-1" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">回到清單</button>
                    </div>
                </div>
                <div class="col-6">
                    <div>
                        <img src="~/images/Comment/@Model.圖片image" width="200" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
