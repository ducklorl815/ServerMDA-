<div>
    <table id="myTable" class="table tables display compact hover col-12">
        <thead>
            <tr>
                <th class="col-1">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().評論圖庫編號commentImageId)
                </th>

                <th class="col-1">
                    @Html.DisplayNameFor(model => model.FirstOrDefault().評論編號commentId)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().評論標題commentTitle)
                </th>
                <th>
                    評論使用的圖片
                </th>
                <th class="col-1">
                    指令
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.評論圖庫編號commentImageId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.評論編號commentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.評論標題commentTitle)
                </td>
                <td>
                    <div>
                        <img src="~/images/Comment/@item.圖片image" width="100" />
                    </div>
                </td>
                <td>
                    <a class="btn btn-yuka" id="btn" onclick="showmodal('@Url.Action("Edit","CommentImagesList",new {id=@item.評論圖庫編號commentImageId},Context.Request.Scheme)',null)">修改</a>
                    @*<a class="btn btn-info " id="btn" onclick="showmodal('@Url.Action("Details","CommentImagesList",new {id=@item.評論圖庫編號commentImageId},Context.Request.Scheme)',null)">細節</a>*@
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

