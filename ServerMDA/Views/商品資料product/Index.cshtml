@model IEnumerable<ServerMDA.Models.商品資料product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.商品名稱productName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.商品價格productPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.商品圖片image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.電影院編號theater)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.商品名稱productName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.商品價格productPrice)
            </td>
            <td>
                <img src="@Url.Action("showPhoto","商品資料products", new {id= item.商品編號productId })" class="img-thumbnail w-25" />
            <td>
            <td>
                @Html.DisplayFor(modelItem => item.電影院編號theater.地址address)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.商品編號productId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.商品編號productId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.商品編號productId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
