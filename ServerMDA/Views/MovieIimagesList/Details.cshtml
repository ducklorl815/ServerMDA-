@model ServerMDA.ViewModel.CMovieImagesListViewModel

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<h1>Details</h1>

<div>
    <h4>電影圖片movieIimagesList</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.圖片編號imageId)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/images/MovieImage/@Model.圖片image" style="width:300px" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.中文標題titleCht)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.英文標題titleEng)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-yuka mb-1" input="color" id="btn" onclick="showmodal('@Url.Action("Edit","MovieIimagesList",new {id=Model.電影編號movieId},Context.Request.Scheme)',null)">修改圖片內容</a>
    <button type="button" class="btn btn-secondary mb-1" data-bs-dismiss="modal" aria-label="Close">回到清單</button>
</div>
