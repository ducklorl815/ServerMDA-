@model IEnumerable<ServerMDA.Models.導演總表director>

@{
    ViewData["Title"] = "導演清單";
}
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/datatables/jquery.dataTables.css" rel="stylesheet" />
<link href="~/css/sb-admin-2.css" rel="stylesheet">
<link href="~/css/site.css" rel="stylesheet" />

<h2>導演清單</h2><a class="btn btn-info mb-1" onclick="showmodal('@Url.Action("Create","Director",Context.Request.Scheme)',null)">新增</a>
<div>
    <table id="table_id" class="table table-striped table-hover tables col-12">
        <thead>
            <tr style="white-space:nowrap">
                <th class="col-1">
                    @Html.DisplayNameFor(model => model.導演照片image)
                </th>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.導演中文名字nameCht)
                </th>
                <th class="col-7">
                    @Html.DisplayNameFor(model => model.導演英文名字nameEng)
                </th>
                <th class="col-1">

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div>
                            <img src="~/images/Director/@item.導演照片image" width="70" />
                        </div>
                        @*@Html.DisplayFor(modelItem => item.Fimage)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.導演中文名字nameCht)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.導演英文名字nameEng)
                    </td>

                    <td>
                        <a class="btn btn-info mb-1" id="btn" onclick="showmodal('@Url.Action("Edit","Director",new {id=@item.導演編號directorId},Context.Request.Scheme)',null)">修改</a>
                        @*@Html.ActionLink("刪除", "Delete", new { id = item.導演編號directorId })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="newstaticBackdrop" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-title">


            </div>
            <div class="modal-body">


            </div>
        </div>
    </div>
</div>

<script src="~/js/vendor/jquery/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>

<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>
<script>
    showmodal = (url, title) => {
        $.ajax({
            type: "GET",
            url: url,
            success: function (res) {
                $("#newstaticBackdrop .modal-body").html(res);
                $("#newstaticBackdrop .modal-title").html(title);
                $("#newstaticBackdrop").modal('show');
            }
        })
    }
</script>
<script src="~/js/vendor/datatables/jquery.dataTables.js"></script>