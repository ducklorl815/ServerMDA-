@model ServerMDA.Models.導演總表director

@{
    ViewData["Title"] = "修改";
    Layout = null;
}



<div class="row">
    <div class="col-md-5 offset-md-1">
        <h4 class="offset-md-1">修改導演編號 : @Model.導演編號directorId</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="導演編號directorId" value="@Model.導演編號directorId" />
            </div>
            <div class="form-group">
                <label asp-for="中文名字nameCht" class="control-label"></label>
                <input asp-for="中文名字nameCht" class="form-control" />
                <span asp-validation-for="中文名字nameCht" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="英文名字nameEng" class="control-label"></label>
                <input asp-for="英文名字nameEng" class="form-control" />
                <span asp-validation-for="英文名字nameEng" class="text-danger"></span>
            </div>
            <div class="pb-xxl-5 mb-xxl-5">

            </div>
            <div class="form-group">
                <label class="control-label">導演照片</label>
                <input type="file" name="photo" />
            </div>
            <div class="form-group">
                <input type="submit" value="修改" class="btn btn-primary mr-2" />
                <a asp-action="List" class="btn btn-secondary">回到清單</a>
            </div>
        </form>
    </div>
    <div class="col-md-5">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="導演照片image" class="control-label "></label>
                <img src="~/images/Director/@Model.導演照片image" width="300" />
                <input asp-for="導演照片image" disabled="disabled" class="form-control" />
                <span asp-validation-for="導演照片image" class="text-danger"></span>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
