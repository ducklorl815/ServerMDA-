@model ServerMDA.Models.導演總表director

@{
    ViewData["Title"] = "修改";
    Layout = null;
}
<style>
    .divEmpty {
        margin: 200px;
    }
</style>

<link href="~/css/bootstrap-5.2.2/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/bootstrap-5.2.2/YukabtnEdit.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<div class="row">
    <div class="col-4 offset-1">
        <h4>修改導演編號 : @Model.導演編號directorId</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" name="導演編號directorId" value="@Model.導演編號directorId" />
            </div>
            <div class="form-group">
                <label asp-for="導演中文名字nameCht" class="control-label"></label>
                <input asp-for="導演中文名字nameCht" class="form-control" />
                <span asp-validation-for="導演中文名字nameCht" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="導演英文名字nameEng" class="control-label"></label>
                <input asp-for="導演英文名字nameEng" class="form-control" />
                <span asp-validation-for="導演英文名字nameEng" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="filePhoto" type="file" name="photo" />
            </div>

            <div class="divEmpty">
            </div>

            <div class="form-group ">
                <input type="submit" value="確認修改" class="btn btn-yuka mb-1 mr-3" />
                @*<a asp-action="List" class="btn btn-secondary">回到清單</a>*@
                <button type="button" class="btn btn-secondary mb-1 mr-3" data-bs-dismiss="modal" aria-label="Close">回到清單</button>
            </div>
        </form>
    </div>
    <div class="col-5 offset-1">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="導演照片image" class="control-label "></label>
                <br />
                <img src="~/images/Director/@Model.導演照片image" width="300" />
                @*<input asp-for="導演照片image" disabled="disabled" class="form-control" />*@
                <span asp-validation-for="導演照片image" class="text-danger"></span>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/bootstrap-5.2.2/bootstrap.min.js"></script>
<script src="~/js/bootstrap-5.2.2/bootstrap.bundle.js"></script>